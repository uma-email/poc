{
  "name": "aems-uma-resource-server",
  "version": "1.0.0",
  "description": "A Proof of Concept project",
  "main": "server.js",
  "scripts": {
    "lint": "standardx | snazzy",
    "lint:fix": "standardx --fix",
    "dev": "NODE_PATH=. nodemon ./bin/server.js",
    "start": "NODE_PATH=. node ./bin/server.js"
  },
  "author": "1token",
  "private": "true",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "~4.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.10.1",
    "helmet": "^4.1.1",
    "http-errors": "~1.6.3",
    "pino": "^6.6.1",
    "multer": "^1.4.2",
    "ssl-root-cas": "1.3.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "snazzy": "^8.0.0",
    "standardx": "5.0.0"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        "error",
        {
          "objects": "never",
          "arrays": "never",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ]
    }
  },
  "standard": {
    "ignore": [
      "/openapi-ui/"
    ]
  }
}
